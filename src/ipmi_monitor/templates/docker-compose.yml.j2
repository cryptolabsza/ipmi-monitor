# =============================================================================
# IPMI Monitor - Docker Compose Configuration
# Generated by: ipmi-monitor quickstart
# =============================================================================

version: '3.8'

services:
  ipmi-monitor:
    image: ghcr.io/cryptolabsza/ipmi-monitor:{{ image_tag | default('latest') }}
    container_name: ipmi-monitor
    restart: unless-stopped
{% if network_mode == 'host' %}
    network_mode: host
{% else %}
    ports:
      - "{{ web_port | default(5000) }}:5000"
{% endif %}
    environment:
      # Application
      - APP_NAME={{ app_name | default('IPMI Monitor') }}
      
      # Admin credentials (from .env file)
      - ADMIN_USER=admin
      - ADMIN_PASS=${ADMIN_PASS}
      - SECRET_KEY=${SECRET_KEY}
      
      # Default IPMI credentials (from .env file)
      - IPMI_USER=${IPMI_USER:-admin}
      - IPMI_PASS=${IPMI_PASS}
{% if ipmi_pass_nvidia %}
      - IPMI_PASS_NVIDIA=${IPMI_PASS_NVIDIA}
{% endif %}
      
      # Collection settings
      - POLL_INTERVAL={{ poll_interval | default(300) }}
      
{% if ai_enabled %}
      # AI Features
      - AI_SERVICE_URL=https://ipmi-ai.cryptolabs.co.za
      - AI_LICENSE_KEY=${AI_LICENSE_KEY}
{% endif %}
      
    volumes:
      # Persistent data storage
      - ipmi_data:/app/data
      
      # Server configuration (generated by quickstart)
      - ./servers.yaml:/app/config/servers.yaml:ro
{% if ssh_keys_dir %}
      
      # SSH keys for server access
      - ./ssh_keys:/app/ssh_keys:ro
{% endif %}
      
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5000/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 30s
    labels:
      - "com.centurylinklabs.watchtower.enable=true"
{% if not network_mode == 'host' %}
    networks:
      - ipmi_network
{% endif %}

{% if enable_watchtower %}
  # Auto-updater - keeps IPMI Monitor up to date
  watchtower:
    image: containrrr/watchtower
    container_name: watchtower
    restart: unless-stopped
    environment:
      - WATCHTOWER_CLEANUP=true
      - WATCHTOWER_POLL_INTERVAL=300
      - WATCHTOWER_LABEL_ENABLE=true
      - WATCHTOWER_INCLUDE_STOPPED=true
      - WATCHTOWER_ROLLING_RESTART=true
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
{% if not network_mode == 'host' %}
    networks:
      - ipmi_network
{% endif %}
{% endif %}

{% if enable_nginx %}
  # Nginx reverse proxy for HTTPS
  nginx:
    image: nginx:alpine
    container_name: ipmi-nginx
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/conf.d/default.conf:ro
{% if letsencrypt_domain %}
      - ./certbot/conf:/etc/letsencrypt:ro
      - ./certbot/www:/var/www/certbot:ro
{% else %}
      - ./ssl:/etc/nginx/ssl:ro
{% endif %}
    depends_on:
      - ipmi-monitor
{% if not network_mode == 'host' %}
    networks:
      - ipmi_network
{% endif %}

{% if letsencrypt_domain %}
  # Certbot for Let's Encrypt certificates
  certbot:
    image: certbot/certbot
    container_name: ipmi-certbot
    volumes:
      - ./certbot/conf:/etc/letsencrypt
      - ./certbot/www:/var/www/certbot
    entrypoint: "/bin/sh -c 'trap exit TERM; while :; do certbot renew; sleep 12h & wait $${!}; done;'"
{% if not network_mode == 'host' %}
    networks:
      - ipmi_network
{% endif %}
{% endif %}
{% endif %}

volumes:
  ipmi_data:
    name: ipmi-monitor-data

{% if not network_mode == 'host' %}
networks:
  ipmi_network:
    driver: bridge
{% endif %}
