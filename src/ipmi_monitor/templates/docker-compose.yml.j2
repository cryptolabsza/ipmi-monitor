# =============================================================================
# IPMI Monitor - Docker Compose Configuration
# Generated by: ipmi-monitor quickstart
# =============================================================================

services:
  # ===========================================================================
  # IPMI Monitor - Main Application
  # ===========================================================================
  ipmi-monitor:
    image: ghcr.io/cryptolabsza/ipmi-monitor:{{ image_tag | default('latest') }}
    container_name: ipmi-monitor
    restart: unless-stopped
    ports:
      - "{{ web_port | default(5000) }}:5000"
    environment:
      - APP_NAME={{ app_name | default('IPMI Monitor') }}
      - ADMIN_USER=admin
      - ADMIN_PASS=${ADMIN_PASS}
      - SECRET_KEY=${SECRET_KEY}
      - IPMI_USER=${IPMI_USER:-admin}
      - IPMI_PASS=${IPMI_PASS}
      - POLL_INTERVAL={{ poll_interval | default(300) }}
{% if enable_nginx %}
      - SESSION_COOKIE_SECURE=true
{% endif %}
{% if ai_enabled %}
      - AI_SERVICE_URL=https://ipmi-ai.cryptolabs.co.za
      - AI_LICENSE_KEY=${AI_LICENSE_KEY}
{% endif %}
    volumes:
      - ipmi_data:/app/data
      - ./servers.yaml:/app/config/servers.yaml:ro
{% if ssh_keys_dir %}
      - ./ssh_keys:/app/ssh_keys:ro
{% endif %}
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5000/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 30s
    labels:
      - "com.centurylinklabs.watchtower.enable=true"
    networks:
      - ipmi_network

{% if enable_watchtower %}
  # ===========================================================================
  # Watchtower - Auto-updates
  # ===========================================================================
  watchtower:
    image: containrrr/watchtower
    container_name: watchtower
    restart: unless-stopped
    environment:
      - WATCHTOWER_CLEANUP=true
      - WATCHTOWER_POLL_INTERVAL=300
      - WATCHTOWER_LABEL_ENABLE=true
      - WATCHTOWER_INCLUDE_STOPPED=true
      - WATCHTOWER_ROLLING_RESTART=true
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
    networks:
      - ipmi_network
{% endif %}

{% if enable_nginx %}
  # ===========================================================================
  # Nginx - Reverse Proxy with SSL
  # ===========================================================================
  nginx:
    image: nginx:alpine
    container_name: ipmi-nginx
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/conf.d/default.conf:ro
      - ./ssl:/etc/nginx/ssl:ro
      - ./certbot/conf:/etc/letsencrypt:ro
      - ./certbot/www:/var/www/certbot:ro
    depends_on:
      - ipmi-monitor
    networks:
      - ipmi_network
{% endif %}

# =============================================================================
# Volumes
# =============================================================================
volumes:
  ipmi_data:
    name: ipmi-monitor-data

# =============================================================================
# Networks
# =============================================================================
networks:
  ipmi_network:
    driver: bridge
