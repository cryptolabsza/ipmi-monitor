# =============================================================================
# IPMI Monitor - Docker Compose Configuration
# Generated by: ipmi-monitor quickstart
# =============================================================================

services:
  # ===========================================================================
  # IPMI Monitor - Main Application
  # ===========================================================================
  ipmi-monitor:
    image: ghcr.io/cryptolabsza/ipmi-monitor:{{ image_tag | default('latest') }}
    container_name: ipmi-monitor
    restart: unless-stopped
{% if not enable_proxy %}
    ports:
      - "{{ web_port | default(5000) }}:5000"
{% endif %}
    environment:
      - APP_NAME={{ app_name | default('IPMI Monitor') }}
      - SITE_NAME={{ site_name | default('IPMI Monitor') }}
      - ADMIN_USER=admin
      - ADMIN_PASS=${ADMIN_PASS}
      - SECRET_KEY=${SECRET_KEY}
      - IPMI_USER=${IPMI_USER:-admin}
      - IPMI_PASS=${IPMI_PASS}
      - POLL_INTERVAL={{ poll_interval | default(300) }}
      - ENABLE_SSH_LOGS=${ENABLE_SSH_LOGS:-false}
      - TRUSTED_PROXY_IPS=${TRUSTED_PROXY_IPS:-127.0.0.1,{{ static_ips['cryptolabs-proxy'] if static_ips else '172.30.0.10' }}}
{% if enable_proxy %}
      - APPLICATION_ROOT=/ipmi
      - FLEET_HOME_URL=/
      - SESSION_COOKIE_SECURE=true
{% endif %}
{% if ai_enabled %}
      - AI_SERVICE_URL=https://ipmi-ai.cryptolabs.co.za
      - AI_LICENSE_KEY=${AI_LICENSE_KEY}
{% endif %}
    volumes:
      - ipmi_data:/app/data
      - ./servers.yaml:/app/config/servers.yaml:ro
{% if ssh_keys_dir %}
      - ./ssh_keys:/app/ssh_keys:ro
{% endif %}
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5000/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 30s
    labels:
      - "com.centurylinklabs.watchtower.enable=true"
    networks:
      cryptolabs:
{% if static_ips %}
        ipv4_address: {{ static_ips['ipmi-monitor'] }}
{% endif %}

{% if enable_watchtower %}
  # ===========================================================================
  # Watchtower - Auto-updates
  # ===========================================================================
  watchtower:
    image: containrrr/watchtower
    container_name: watchtower
    restart: unless-stopped
    environment:
      - WATCHTOWER_CLEANUP=true
      - WATCHTOWER_POLL_INTERVAL=300
      - WATCHTOWER_LABEL_ENABLE=true
      - WATCHTOWER_INCLUDE_STOPPED=true
      - WATCHTOWER_ROLLING_RESTART=true
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
    networks:
      - cryptolabs
    labels:
      - "com.centurylinklabs.watchtower.enable=true"
{% endif %}

# NOTE: cryptolabs-proxy is deployed separately via setup_proxy() (docker run),
# not included in this compose file. This matches dc-overview's working pattern.

# =============================================================================
# Volumes
# =============================================================================
volumes:
  ipmi_data:
    name: ipmi-monitor-data

# =============================================================================
# Networks
# =============================================================================
networks:
  cryptolabs:
    # Network is pre-created by _ensure_docker_network() with correct subnet/gateway
    # Always use external to avoid conflicts with the pre-created network
    external: true
    name: cryptolabs